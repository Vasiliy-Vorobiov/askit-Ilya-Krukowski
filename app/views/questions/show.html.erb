<% currently_at 'Questions'%>
<h1 class="mb-4"><%= @question.title %></h1>
<time datetime = "<%= @question.formatted_created_at%>">
  <%= @question.formatted_created_at %>
</time>
<p class="lead my-3">
  <%= @question.body %>
</p>
<%= link_to 'show', question_path(@question), class: "btn btn-primary" %>
<%= link_to 'edit', edit_question_path(@question), class: "btn btn-secondary" %>
<%= link_to 'Delete', question_path(@question), class: "btn btn-danger", 
            data: { method: :delete, confirm: 'Are you sore?'} %>
<hr class="my-3">
<div class="text-start">
  <h4 class="h-auto">Write your answer</h4>
</div>
<div>
  <%= render 'answers/form' %>
</div>
<h2 class="mt-5">Answers</h2>
<% @answers.each do |item| %>
  <article class="mb-3 card" id="answer-<%= item.id %>">
    <div class="card-body">
      <section class="card-text">
        <small> <time datetime = "<%= item.formatted_created_at%>">
            <%= item.formatted_created_at %>
          </time> </small>
        <p class="mt-2 mb-3">
          <%= item.body %>
        </p>
      </section>
      <%= link_to 'Edit', edit_question_answer_path(@question, item), 
            class: "btn btn-info btn-xs" %>
      <%= link_to 'Delete', question_answer_path(@question, item), 
            class: "btn btn-danger btn-xs", 
        data: { method: :delete, confirm: 'Are you sure?' } %>
    </div>
  </article>
<% end %>
