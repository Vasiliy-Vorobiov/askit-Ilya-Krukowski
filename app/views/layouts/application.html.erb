<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title><%= full_title(yield(:page_title)) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>
  <body>
    <%= yield :main_menu%>
    <main class="container mt-3">
      <% if flash[:success].present? %>
        <%= tag.div flash[:success], class: "alert alert-success", role: "alert" %>
      <% elsif flash[:warning].present? %>
        <%= tag.div flash[:warning], class: "alert alert-warning", role: "alert" %>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
